
.login-paddingtop {
    padding-top: 100rpx;
}
.zai-box {
    padding: 0 20rpx;
    padding-top: 100rpx;
    position: relative;
}
.zai-logo {
    width: 200rpx;
    height: 150px;
}
.zai-title {
   font-size: 58rpx;
   color: #000000;
   text-align: center;
}
.input-placeholder, .zai-input {
    color: #94afce;
}
.zai-label {
    padding: 60rpx 0;
    text-align: center;
    font-size: 30rpx;
    color: #a7b6d0;
}
.zai-btn {
    background: #ff65a3;
    color: #fff;
    border: 0;
    border-radius: 100rpx;
    font-size: 36rpx;
}
.zai-btn:after {
    border: 0;
}

/*按钮点击效果*/
.zai-btn.button-hover {
    -webkit-transform: translate(1rpx, 1rpx);
            transform: translate(1rpx, 1rpx);
}


